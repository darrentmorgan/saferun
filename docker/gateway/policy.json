{
  "gdpr": {
    "mode": "monitor",
    "max_retention_days": 1095,
    "block_special_categories": ["health", "biometric", "religion", "sexual_orientation"],
    "mask_fields": ["credit_card", "iban", "passport_number", "national_id", "email", "phone"],
    "allowed_purposes": ["booking", "support", "billing", "concierge"],
    "actions": {
      "on_high": "block",
      "on_medium": "redact",
      "on_low": "allow_with_note"
    }
  },
  "pii_detection": {
    "enabled": true,
    "confidence_threshold": 0.8,
    "patterns": {
      "eu_passport": {
        "regex": "\\b[A-Z]\\d{7}\\b",
        "description": "EU Passport Number (format: A1234567)",
        "category": "identifier",
        "gdpr_article": "Article 6",
        "risk_level": "medium",
        "examples": ["A1234567", "B9876543"]
      },
      "iban": {
        "regex": "\\b[A-Z]{2}\\d{2}[A-Z0-9]{4}\\d{7}[A-Z0-9]{0,16}\\b",
        "description": "International Bank Account Number",
        "category": "financial",
        "gdpr_article": "Article 6",
        "risk_level": "high",
        "examples": ["DE89370400440532013000", "GB29NWBK60161331926819"]
      },
      "credit_card": {
        "regex": "\\b(?:4\\d{12}(?:\\d{3})?|5[1-5]\\d{14}|3[47]\\d{13}|3[0-9]\\d{11}|6(?:011|5\\d{2})\\d{12})\\b",
        "description": "Credit Card Number (Visa, MasterCard, Amex, Discover)",
        "category": "financial",
        "gdpr_article": "Article 6",
        "risk_level": "high",
        "examples": ["4532015112830366", "5555555555554444"]
      },
      "email": {
        "regex": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b",
        "description": "Email Address",
        "category": "contact",
        "gdpr_article": "Article 6",
        "risk_level": "low",
        "examples": ["guest@hotel.com", "user@example.org"]
      },
      "phone_eu": {
        "regex": "\\+\\d{1,3}\\s?\\d{1,4}\\s?\\d{1,4}\\s?\\d{1,9}",
        "description": "European Phone Number",
        "category": "contact",
        "gdpr_article": "Article 6",
        "risk_level": "low",
        "examples": ["+49 30 12345678", "+33 1 42 86 83 26"]
      },
      "ssn_us": {
        "regex": "\\b\\d{3}-?\\d{2}-?\\d{4}\\b",
        "description": "US Social Security Number",
        "category": "special_category",
        "gdpr_article": "Article 9",
        "risk_level": "high",
        "examples": ["123-45-6789", "987654321"]
      },
      "health_keywords": {
        "regex": "\\b(?:diabetes|cancer|HIV|AIDS|depression|anxiety|medication|prescription|diagnosis|symptoms|treatment|therapy|medical|hospital|doctor|patient)\\b",
        "description": "Health-related keywords",
        "category": "special_category",
        "gdpr_article": "Article 9",
        "risk_level": "high",
        "case_sensitive": false
      },
      "biometric_keywords": {
        "regex": "\\b(?:fingerprint|retina|iris|facial recognition|biometric|DNA|genetic|voice print)\\b",
        "description": "Biometric data keywords",
        "category": "special_category", 
        "gdpr_article": "Article 9",
        "risk_level": "high",
        "case_sensitive": false
      }
    },
    "whitelist": {
      "domains": ["example.com", "test.local"],
      "phrases": ["test data", "sample", "placeholder", "example"]
    },
    "redaction": {
      "replacement_char": "*",
      "preserve_format": true,
      "min_length": 3
    }
  }
}
